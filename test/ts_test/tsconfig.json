{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true
  },
  "types": [
    "mocha"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
